<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/message_single_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_user_image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/avatar_1" />

    <TextView
        android:id="@+id/message_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/message_user_image"
        android:text="Display Name"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_name"
        android:layout_marginStart="14dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/message_user_image"
        android:text="Message Text"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="9dp"
        android:layout_toEndOf="@+id/message_name"
        android:text="00:00"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/message_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_text"
        android:layout_alignStart="@id/message_text"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/message_user_image"
        android:scaleType="centerCrop" />


</RelativeLayout>


